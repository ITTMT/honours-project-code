{
	"name": "bhc-language-server",
	"description": "A language server for HTML to provide better interoperability between HTML and CSS",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"url": "https://github.com/ITTMT/honours-project-code"
	},
	"categories": [],
	"keywords": [
		"language-server",
		"tower-lsp"
	],
	"engines": {
		"vscode": "^1.66.0"
	},
	"activationEvents": [
		"onLanguage:html"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "html",
				"extensions": [
					".html"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "bhc-language-server",
			"properties": {
				"bhc-language-server.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"enumDescriptions": [
						"No traces",
						"Error only",
						"Full log"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b ",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"mocha": "^10.2.0",
		"typescript": "^5.3.3"
	}
}
